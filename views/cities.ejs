<!DOCTYPE html>
<%- include("partials/header") %>

    <div class="container">
      <div class="row mt-2">
      <% cities.forEach ((city) => { %>
        <div class="card mx-3 my-3 p-0">
          <a href="/cities/<%= city._id %>">
            <img class="card-img card-img-top" src="<%= city.image %>" alt="Picture of the city">
          </a>
          <h3 class="card-title mt-3 text-capitalize"><%= city.name %></h3>
          <p class="card-text mb-3 mx-3"><%= city.description %></p>
        </div>
      <% })%>
      </div>
    </div>
<%- include("partials/footer") %>
