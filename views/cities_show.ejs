<%- include("partials/header") %>
<div class="container">
  <div class="row mt-4">
    <div class="col-6 show_image-container">
      <img src="<%= city.image %>" alt="Picture of the city">
    </div>
    <div class="col-6 show_details-container">
      <div class="card w-100 bg-dark">
        <div class="card-body text-white">
          <h5 class="card-title text-white"><%= data.location.name%>, <%= data.location.country %></h5>
          <h6 class="card-subtitle mb-2 text-light text-center"><%= data.location.localtime%> (GMT<%=data.location.utc_offset%>)</h6>
          <div class="d-flex flex-row justify-content-between">
            <div class="">
              <img src="<%= data.current.weather_icons[0]%>" alt="Icon representing current weather">
              <figcaption><%= data.current.weather_descriptions[0]%></figcaption>
            </div>
            <h1 class="temp"><%= data.current.temperature%>°C</h1>
            <ul class="no-bullets">
              <li>Wind: <%= data.current.wind_speed%> km/h</li>
              <li>Feels like <%= data.current.feelslike%>°C</li>
            </ul>
          </div>
        </div>
      </div>
      <p><%= city.description %></p>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Country</th>
            <td class="text-capitalize"><%= city.country %></td>
          </tr>
          <tr>
            <th scope="row">Region</th>
            <td class="text-capitalize"><%= city.region %></td>
          </tr>
          <tr>
            <th scope="row">Population</th>
            <td><%= city.population %></td>
          </tr>
        </tbody>
      </table>
      <% if(user && user.username === city.owner.username) { %>
        <a href="/cities/<%= city._id %>/edit">
          <button class="btn w-100 btn-outline-info btn-lg btn-block mb-2">Edit</button>
        </a>
        <form action="/cities/<%= city._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn w-100 btn-outline-danger btn-lg btn-block">Delete</button>
        </form>
      <% } %>
    </div>
  </div>
  <div class="row">
    <!-- <a href="#" class="col-3">
      <button type="button" id="watchlist_btn" class="btn btn-success btn-lg mt-3 mb-4">Add To Watchlist</button>
    </a> -->
    <% if(user && user.watchlist.some(e => e._id.equals(city._id))) { %>
      <form class="col-3" action="/account/watchlist?_method=DELETE" method="POST">
        <input type="hidden" name="cityId" value="<%= city._id %>">
        <button type="submit" class="btn btn-danger btn-lg mt-3 mb-4">Delete From Watchlist</button>
      </form>
    <% } else { %>
      <form class="col-3" action="/account/watchlist" method="POST">
        <input type="hidden" name="cityId" value="<%= city._id %>">
        <button type="submit" class="btn btn-success btn-lg mt-3 mb-4">Add To Watchlist</button>
      </form>
    <% } %>
    <div class="col-2 mb-2">
      <% if(user && city.upvotes.indexOf(user.username) >= 0) { %>
        <button id="upvote_btn" class="btn btn-success btn-lg mt-3">+</button>
      <% } else if(user) { %>
        <button id="upvote_btn" class="btn btn-outline-success btn-lg mt-3">+</button>
      <% } else { %>
        <button id="upvote_btn" type="button" class="btn btn-outline-success btn-lg mt-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Login to vote" disabled>+</button>
      <% } %>
      <span id="score" class="mx-2"><%= city.upvotes.length - city.downvotes.length %></span>
      <% if(user && city.downvotes.indexOf(user.username) >= 0) { %>
        <button id="downvote_btn" class="btn btn-danger btn-lg mt-3">-</button>
      <% } else if(user) { %>
        <button id="downvote_btn" class="btn btn-outline-danger btn-lg mt-3">-</button>
      <% } else { %>
        <button id="downvote_btn" type="button" class="btn btn-outline-danger btn-lg mt-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Login to vote" disabled>-</button>
      <% } %>
    </div>
  </div>

  <% if(user) { %>
    <div class="addComment p-0 m-0">
      <div class="card mb-2 w-100 p-0 m-0">
        <form class="m-0" action="/cities/<%= cityId %>/comments" method="POST">
          <div class="card-body p-0 m-0">
            <div class="form-group">
              <label class="visually-hidden" for="text">Comment Text</label>
              <textarea class = "form-control" name="text" id="text" rows="8" cols="80" placeholder="Comment text here..." required></textarea>
            </div>
          </div>
          <div class="card-footer mb-0">
            <input type="hidden" name="cityId" value="<%= cityId %>">
            <button type="submit" class="btn btn-primary">Comment</button>
          </div>
        </form>
      </div>
    </div>
  <% } else { %>
    <p><a href="/login">Login</a> to add your own comment</p>
  <% } %>

  <% comments.forEach((comment) => { %>
    <div class="card mb-2 w-100">
      <h5 class="card-header"><%= comment.user.username %></h5>
      <div class="card-body">
        <!-- <h5 class="card-title">Special title treatment</h5> -->
        <p class="card-text"><%= comment.text %></p>
        <% if(user && user.username === comment.user.username) { %>
          <div class="d-flex flex-row">
            <p>
              <button class="btn btn-sm btn-secondary my-1 mx-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Edit
              </button>
            </p>
            <form class="my-1" action="/cities/<%= city._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger ">Delete</button>
            </form>
          </div>
          <div class="collapse" id="collapseExample">
            <form action="/cities/<%= city._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <label class="visually-hidden" for="text">Comment Text</label>
                <textarea class = "form-control" name="text" id="text" rows="2" cols="80" required><%= comment.text %></textarea>
              </div>
              <button type="submit" class="btn btn-primary mt-2">Edit Comment</button>
            </form>
          </div>
          <% } %>
      </div>
    </div>
  <% }) %>
  <div class="py-5"></div>
</div>
<script>
  var cityId = "<%- city._id %>"
</script>
<script src="/js/cities_show.js"></script>
<%- include("partials/footer") %>
