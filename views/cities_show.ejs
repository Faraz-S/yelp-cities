<%- include("partials/header") %>
<div class="container">
  <div class="row mt-4">
    <div class="col-6 show_image-container">
      <img src="<%= city.image %>" alt="Picture of the city">
    </div>
    <div class="col-6 show_details-container">
      <h1><%= city.name %></h1>
      <p><%= city.description %></p>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Country</th>
            <td><%= city.country %></td>
          </tr>
          <tr>
            <th scope="row">Region</th>
            <td><%= city.region %></td>
          </tr>
          <tr>
            <th scope="row">Population</th>
            <td><%= city.population %></td>
          </tr>
        </tbody>
      </table>
      <% if(user && user.username === city.owner.username) { %>
        <a href="/cities/<%= city._id %>/edit">
          <button class="btn w-100 btn-outline-info btn-lg btn-block mb-2">Edit</button>
        </a>
        <form action="/cities/<%= city._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn w-100 btn-outline-danger btn-lg btn-block">Delete</button>
        </form>
      <% } %>
    </div>
  </div>
  <div class="row">
    <a href="/cities/<%= city._id %>/comments/new" class="col-3">
      <button type="button" class="btn btn-success btn-lg mt-3 mb-4">Add Comment</button>
    </a>
    <div class="col-2">
      <button id="upvote_btn" class="btn btn-outline-success btn-lg mt-3">+</button>
      <span id="score" class="mx-2">10</span>
      <button id="downvote_btn" class="btn btn-outline-danger btn-lg mt-3">-</button>
    </div>
  </div>
  <% comments.forEach((comment) => { %>
    <div class="row show_comment-container py-2 border">
      <div class="col-2 border-right my-auto">
        <%= comment.user.username %>
      </div>
      <div class="col-2 border-right my-auto d-flex flex-wrap justify-content-center">
        <% if(user && user.username === comment.user.username) { %>
          <a class="btn btn-sm btn-success w-75 p-0 my-1" href="/cities/<%= city._id %>/comments/<%= comment._id %>/edit">
            Edit
          </a>
          <form class="w-75 my-1" action="/cities/<%= city._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger w-100 p-0">Delete</button>
          </form>
      <% } %>
      </div>
      <div class="col-8">
        <%= comment.text %>
      </div>
    </div>
  <% }) %>
  <div class="py-5"></div>
</div>
<%- include("partials/footer") %>
